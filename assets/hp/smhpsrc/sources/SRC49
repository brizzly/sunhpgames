 C-8.B ?C>A.B EXIT
 
 C+6.B
 ?C<A.B
 {
  ?ST=1.0 GOYES AA2
  ?ST=1.9 ç
  { ?ST=0.10 GOYES AA2 }
  %MARIO MORDU
  GOSUBL LOST_LIFE
  EXIT2
 }
 SKELSE
 {
  %TORTUE FRAPPEE
  *AA2
  GOSUBL TORTLE_HIT
 }
}

{
 ?ST=0.9 EXIT
 ?ST=1.10 EXIT
 RTN
}

?ST=1.10
{
 ?ST=0.8 RTNYES
}

?ST=0.6
{
 %VERS LA DROITE
 GOSUBL MURD_T
 SKIPNC
 {
  ST=0.6 EXIT2
 }
 D0=(5)SX A=DAT0.B
% LC 5F ?A<C.B
% {
%  ST=0.6 EXIT2
% }
 A+1.B
 DAT0=A.B
}
SKELSE
{
 %VERS LA GAUCHE
 GOSUBL MURG_T
 SKIPNC
 {
  ST=1.6 EXIT2
 }
 D0=(5)SX A=DAT0.B
 ?Aã0.B
 {
  ST=1.6 EXIT2
 }
 A-1.B
 DAT0=A.B
}

?ST=0.10
{
 GOSUBL SOL_T
 SKIPC
 {
  D0=(5)SY A=DAT0.B
  LC 37 ?AäC.B ç
  {
   ST=0.5 %DEATH
  }
  SKELSE
  {
   A+1.B DAT0=A.B
  }
 }
 GOTO CHUTE2
}
%PAS DE CHUTE
?ST=0.6
{
 GOSUBL SOL_T
 SKIPC
 {
  ST=0.6
 }
}
SKELSE
{
 GOSUBL SOL_T
 SKIPC
 {
  ST=1.6
 }
}
*CHUTE2

GOLONG FIN

*OBJ.KOOPA
% READ SPRITE 
A=R2.A C=R4.A
A+C.A R4=A.W

LC 07 B=C.B

A=0.A C=0.A
D0=(5)SX A=DAT0.B
LC 60 ?A>C.B
{
 D0=(5)SY C=DAT0.B
 GOSUBL DISP.A.C.R4.B
}

