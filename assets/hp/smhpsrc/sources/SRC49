 A=DAT0.P ?A=0.P
 {
  D0+1 A=DAT0.B
  ?Aã0.B
  {
   A=0.P D0-1 DAT0=A.P
   EXIT2
  }
  A-1.B DAT0=A.B
  D0-1
 }
 D0+6 C+1.P UP
}

D0=(5)STABLE
A=DAT0.A D0=A

