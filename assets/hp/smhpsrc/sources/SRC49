{
 LA(1)LMAX
 ?C=A.P RTNYES
 A=DAT0.P ?A=0.P EXIT
 D0+6 C+1.P UP
}

LC 1 DAT0=C.P D0+1
%CALCUL POSITION

LA(2)#13
ASL.A ASRB.A
DAT0=A.B D0+2

LA(2)#8 C=B.B A-C.B
ASL.A ASRB.A
DAT0=A.B
RTN

