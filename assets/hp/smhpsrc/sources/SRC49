%LOOK AROUND CHAMP
D0=(5)SX A=DAT0.B
D0=(5)MX C=DAT0.B
{
 C+4.B ?C<A.B EXIT
 A+8.B ?C>A.B EXIT
 
 D0=(5)SY A=DAT0.B
 D0=(5)MCLIPH C=DAT0.B
 A+C.B
 D0=(5)MY C=DAT0.B

 C+4.B ?C<A.B EXIT
 A+8.B ?C>A.B EXIT
 
  %CHAMP UP
  D0=(5)VIE A=DAT0.B
  SETDEC A+1.B SETHEX
  DAT0=A.B
  %PLUS DE CHAMPIGNON
  ST=0.5
  %UN PANEL A AFFICHER
  D0=(5)FLAG01
  A=DAT0.4
  ABIT=1.0
  DAT0=A.4
}

