{
 LA(2)SMAX
 ?C=A.B EXIT
 A=DAT0.P ?A=0.P
 {
  D0+1
  D0+2 D0+3
  A=DAT0.B
  ?Aã0.B
  {
   A=0.P D0-1
   D0-2 D0-3
   DAT0=A.P
   EXIT2
  }
  A-1.B DAT0=A.B
  D0-1 
  D0-2 D0-3
 }
 D0+11 C+1.B UP
}
