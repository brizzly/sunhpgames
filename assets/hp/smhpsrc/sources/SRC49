 {
  A=DAT1.P DAT0=A.P
  D1+34 D0+34 C-1.P
  UPNC
 }
 C=R4.A C-1.A R4=C.W
 BSR.W D-1.P UP
}
RTN

*SPRITES
C=0.A R3=C.W
