*ADD.CHAMP
%met bloc banal

C=R1.A RSTK=C
D0=(5)LEVEL.SURFACE A=DAT0.A R1=A.W

A=R2.A
LC(5)$18A A+C.A R4=A.W

A=0.A C=0.A
D0=(5)MX A=DAT0.B

ASRB.A ASRB.A ASRB.A
ASL.A ASRB.A B=A.A

A=0.A C=0.A
D0=(5)SCROL.COUNTER C=DAT0.P
D0=(5)MX A=DAT0.B
C+A.A

LA(5)#8 C+4.A
%%%%% C modulo A %%%%%
{ ?C<A.A EXIT C-A.A UP }

A=0.A
D0=(5)MX A=DAT0.B
C-4.A A-C.A R3=A.W

LC(2)#7 B=C.B

C=0.A
D0=(5)MY C=DAT0.B
CSRB.A CSRB.A CSRB.A
CSL.A CSRB.A
GOSUBL DISP.A.C.R4.B
C=RSTK R1=C.W

LC(5)$41E R4=C.W

D0=00104 A=DAT0.A
D0=A A=0.B
A=DAT0.P ASRB.P ASRB.P
?A=0.P RTNYES
A+2.P B=A.B
%LC(2)#3 B=C.B

A=R3.A

C=0.A
D0=(5)MY C=DAT0.B
C-8.A RTNC
CSRB.A CSRB.A CSRB.A
CSL.A CSRB.A
GOLONG ADDOBJ.A.C.B.R4
RTN

